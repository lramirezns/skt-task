<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
                 version="2.0">
    <description>My First JPA XML Application</description>
    <package>entity</package> 
    <entity class="com.skytouch.common.model.Product" name="Product">
        <table name="product"/>
        <attributes>
            <id name="id">
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="_name">
                <column name="name" length="50"/>
            </basic>
            <basic name="_description">
                <column name="description" length="500" />
            </basic>
            <basic name="_unitPrice">
                <column name="unit_price" column-definition="INTEGER"/>
            </basic>
                      <basic name="_quantiryPerUnit">
                <column name="quantity_per_unit" column-definition="INTEGER"/>
            </basic>
        </attributes>
   </entity>
</entity-mappings>